#include <iostream>
#include <iomanip>
#include <math.h>

using namespace std;

int main()
{
    double base, altura, area, perimetro, diagonal, raiz;

    cout << "Base do retengulo: ";
    cin >> base;
    cout << "Altura do retangulo: ";
    cin >> altura;

    area = base * altura;
    perimetro = (base + altura) * 2;
    diagonal = (base * base + altura * altura);
    raiz = sqrt(diagonal);

    cout << fixed << setprecision(4);
    cout << "AREA = " << area << "\n";
    cout << "PERIMETRO = " << perimetro << "\n";
    cout << "DIAGONAL = " << raiz;

    return 0;
}
