#include <iostream>
#include <string>
#include <math.h>
#include <climits>

using namespace std;

int main()
{
    int idade1, idade2;
    string nome1, nome2;
    double media;

    cout << "Dados da primeira pessoa: \n";
    cout << "Nome: ";
    getline(cin, nome1);
    cout << "Idade: ";
    cin >> idade1;
    cout << "Dados da Segunda pessoa: \n";
    cin.ignore(INT_MAX, '\n');
    cout <<"Nome: ";
    getline(cin, nome2);
    cout << "Idade: ";
    cin >> idade2;

    media = double (idade1 + idade2) / 2;

    cout << "A idade media de " << nome1 << " e " << nome2 << " eh de " << media << " anos";

    return 0;
}
